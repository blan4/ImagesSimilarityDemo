root = true

[*]
indent_style = space
indent_size = 4

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yml,jade,js,css,lua,json}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{cpp,c,hpp,h}]
indent_size = 2
